<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment"
    android:orientation="vertical">

    <!--상단 사용자 정보-->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_emp_profile"
             android:padding="10dp"
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_emp_name"
            android:padding="10dp"
            style="@style/main_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 사용자명"/>
                <ImageView
                    android:id="@+id/iv_emp_detail"
                    android:padding="10dp"
                    android:src="@drawable/ic_chevron_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:id="@+id/emp_dep_rank"
                android:padding="10dp"
                style="@style/sub_size"
                android:text="부서명/ 직급"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <!--출근시 출근시간 현재 출근상태가 아니라면 출근 처리 유도해주세요.-->
            <TextView
                android:id="@+id/ontime"
                style="@style/small_size"
                android:layout_centerVertical="true"
                android:text="출근시간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <!--출근시 iv_on_work를 visibility로 해주세요-->
            <ImageView
                android:id="@+id/iv_on_work"
                android:visibility="gone"
                android:src="@drawable/iv_v_green"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
                <ImageView
                android:src="@drawable/iv_x_red"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

    <!--일정따서 일정넣던가-->

    <!-- 공지사항 이미지 배너 캐러셀 -->
        <!--클론코딩에서한거 돌려막기 뷰페이저 2 이용-->


    <!--메뉴 디자인 필요-->



</LinearLayout>